@import './mixin'

// Typo
// ----------------------------------------------------------------------------

*
  font-family 'Helvetica Neue', Helvetica, Arial

// Layout
// ----------------------------------------------------------------------------

html
  width 100%
  height 100%

body
  width 100%
  height 100%
  vbox()

  > header
    height 35px
    vbg-gradient(#495058, #3c434b)
    border-top 1px solid #5a6068
    border-bottom 1px solid #4c525a

    h1
      font-size 14px
      color #cedae9
      text-shadow 0px 1px 1px rgba(0, 0, 0, 0.65)

    > aside
      margin-left 15px
      width 200px
      height 35px
      border-right 1px solid #636a74
      float left

    > section
      text-align left
      margin-left 230px

  > article
    box-flex(1)
    hbox()

    > aside
      width 215px
      border-box()
      background #f1f4f8
      border-right 1px solid #dae4f0

    > section
      box-flex(1)
      padding-top 15px
      overflow scroll

// Lists
// ----------------------------------------------------------------------------

.list
  > h2
    font-size 13px
    font-weight normal
    color #b3bec5
    padding-left 15px

  > ul
    padding 0px
    margin 0px
    list-style none

    li
      margin-bottom 5px
      padding 6px 15px 5px 15px
      cursor pointer

      a
        color #3d4852
        font-size 13px
        font-weight bold
        display block
        background url(/images/icon-class.png) no-repeat 0px 1px
        padding-left 22px
        text-decoration none

      &.active
        vbg-gradient(#77a8f2, #5983c2)
        a
          color #fff
          text-shadow 0px 1px 0px rgba(0, 0, 0, 0.65)
          background-image url(/images/icon-class-active.png)

// Boxes
// ----------------------------------------------------------------------------

.box
  margin 0px 15px 15px 15px
  padding 5px 15px 10px 15px
  border 1px solid #e8ebee
  border-radius(3px)

  h2
    margin 0px
    padding 0px
    font-size 16px
    color #464a4d
  p
    margin 0px
    margin-bottom 5px
  ul
    li
      margin-bottom 5px

  &.instance-method
    h2
      background url(/images/icon-instance-method.png) no-repeat 0px 9px
      padding-left 24px

  &.class
    border 1px solid transparent
    background #f1f5fc
    h2
      background url(/images/icon-class.png) no-repeat 2px 9px
      padding-left 24px